# extension of the tomcat:9.0 image
FROM tomcat:9.0

# arguments
ARG WAR_FILE=target/frontend.war

# copying war file to usr path
COPY ${WAR_FILE} /usr/local/tomcat/webapps/

EXPOSE 8080
#ENTRYPOINT ["java","-jar","/app.jar"]
